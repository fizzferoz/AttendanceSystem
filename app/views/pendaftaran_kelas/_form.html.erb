<%= form_for(pendaftaran_kela) do |f| %>
  <% if pendaftaran_kela.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pendaftaran_kela.errors.count, "error") %> prohibited this pendaftaran_kela from being saved:</h2>

      <ul>
      <% pendaftaran_kela.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
<div class="panel panel-default" style="padding: 20px">
<div class="panel-body">
<div class="input-group input-group-lg " %>
  <div class="field">
    <%= f.label :program %>
    <%= f.text_field :program , autofocus: true, class:'form-control'%>
  </div>

  <div class="field">
    <%= f.label :penganjur %>
    <%= f.text_field :penganjur , autofocus: true, class:'form-control'%>
  </div>

 

 <div class="field">
<%= f.label 'Tarikh Mula:' %><br />
<div class='input-group date' id='datetimepicker6'>
<%= f.text_field :tempohmasamula, autofocus: true, class:'form-control'%>
<span class="input-group-addon">
<span class="glyphicon glyphicon-calendar"></span>
</span>
</div></div>

 <div class="field">
<%= f.label 'Tarikh Tamat:' %><br />
<div class='input-group date' id='datetimepicker7'>
<%= f.text_field :tempohmasatamat, autofocus: true, class:'form-control'%>
<span class="input-group-addon">
<span class="glyphicon glyphicon-calendar"></span>
</span>
</div></div>

 <div class="field">
    <%= f.label :tujuan %>
    <%= f.text_area :tujuan , :class => "form-control", :placeholder => "Maklumat Terperinci"%>
  </div>

<br><br><br><br>
<center>
  <div class="actions">
    <%= f.submit "Daftar" , class: 'btn btn-md btn-info' %>
  </div>
  </center>
<% end %>


</div>
</div>
<div class="col-md-3"></div>
        </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker6').datetimepicker();
        $('#datetimepicker7').datetimepicker({
            useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker6").on("dp.change", function (e) {
            $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker7").on("dp.change", function (e) {
            $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>